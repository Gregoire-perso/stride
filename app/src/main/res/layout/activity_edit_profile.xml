<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditProfileActivity" >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout"
        android:layout_width="360dp"
        android:layout_height="524dp"
        android:layout_marginStart="50dp"
        android:layout_marginTop="194dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="42dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="79dp"
            android:gravity="center_vertical"
            android:text="Name"
            android:textColor="@color/stride"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/userName"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="79dp"
            android:gravity="center_vertical"
            android:inputType="none"
            android:text="name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView8"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical"
            android:text="Age"
            android:textColor="@color/stride"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView8" />

        <EditText
            android:id="@+id/userAge"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:inputType="number"
            android:text="age"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView12"
            app:layout_constraintTop_toBottomOf="@+id/userName" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical"
            android:text="Gender"
            android:textColor="@color/stride"
            android:entries="@array/genders"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView12" />

        <Spinner
            android:id="@+id/userGender"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:entries="@array/genders"
            android:gravity="center_vertical"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView11"
            app:layout_constraintTop_toBottomOf="@+id/userAge" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:text="Email"
            android:textColor="@color/stride"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView11" />

        <EditText
            android:id="@+id/userEmail"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="60dp"
            android:gravity="center_vertical"
            android:inputType="none"
            android:text="email"
            android:textColor="@color/black"
            android:textSize="12sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView10"
            app:layout_constraintTop_toBottomOf="@+id/userGender" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical"
            android:text="Password"
            android:textColor="@color/stride"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView10" />

        <EditText
            android:id="@+id/userPassword"
            android:layout_width="126dp"
            android:layout_height="48dp"
            android:layout_marginStart="19dp"
            android:layout_marginTop="27dp"
            android:gravity="center_vertical"
            android:inputType="none"
            android:text="password"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="normal"
            app:layout_constraintStart_toEndOf="@+id/textView13"
            app:layout_constraintTop_toBottomOf="@+id/userEmail" />

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="79dp"
            android:contentDescription="edit user name"
            app:layout_constraintStart_toEndOf="@+id/userName"
            app:layout_constraintTop_toTopOf="parent"
            android:background="@drawable/edit" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="27dp"
            android:contentDescription="edit user age"
            app:layout_constraintStart_toEndOf="@+id/userAge"
            app:layout_constraintTop_toBottomOf="@+id/imageButton"
            android:background="@drawable/edit" />

        <ImageButton
            android:id="@+id/imageButton4"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="135dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="27dp"
            android:background="@drawable/edit"
            android:contentDescription="edit user email"
            app:layout_constraintBottom_toTopOf="@+id/imageButton5"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/userPassword"
            app:layout_constraintTop_toBottomOf="@+id/imageButton2" />

        <ImageButton
            android:id="@+id/imageButton5"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_marginTop="27dp"
            android:contentDescription="edit user password"
            app:layout_constraintStart_toEndOf="@+id/userPassword"
            app:layout_constraintTop_toBottomOf="@+id/imageButton4"
            android:background="@drawable/edit" />

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="138dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="@color/stride"
            android:text="Update"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView13" />

        <TextView
            android:id="@+id/invalidAge"
            android:layout_width="308dp"
            android:layout_height="30dp"
            android:layout_marginStart="45dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="45dp"
            android:layout_marginBottom="33dp"
            android:gravity="center_vertical"
            android:text="Enter a valid age (over 13 and under 120) !"
            android:textColor="@color/error"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/textView8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textView6"
        android:layout_width="264dp"
        android:layout_height="87dp"
        android:layout_marginStart="73dp"
        android:layout_marginTop="61dp"
        android:layout_marginEnd="74dp"
        android:layout_marginBottom="46dp"
        android:background="@color/stride"
        android:text="Edit personal details"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="11dp"
        android:layout_marginBottom="127dp"
        android:background="@drawable/back"
        android:contentDescription="button to go back to the profile view"
        app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
        app:layout_constraintEnd_toStartOf="@+id/textView6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>